package lambdas;

import java.util.function.Function;

public class Funcao {

	public static void main(String[] args) {
		
		Function<Integer, String> parOuImpar = num -> num %2 == 0 ? "par" : "Ímpar";
		System.out.println(parOuImpar.apply(32));
		
		Function<Integer, String> resultado = valor -> "O resultado é: " + valor;
		
		Function<Integer, String> emp = valor -> valor + "!!!";
		
		String resultadoFinal = parOuImpar.andThen(resultado).andThen(emp).apply(32);
		
		System.out.println(resultadoFinal);
	}
}
